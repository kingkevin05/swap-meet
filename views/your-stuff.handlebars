<!-- Your List of Stuff -->
<style>
  div.preview-images > img { width: 30%; }
</style>

<div class="container-fluid p-0">
  <div class="row">
    <div class="col text-center">
      <h2 class="section-title">Your Stuff</h2>
    </div>
  </div>
  </div>
{{#if items.length}}
<div id="multi-item-electronics" class="carousel slide" data-ride="carousel">
    <!--Slides-->
    <div class="carousel-inner">
      {{#each items as |item|}}
        <!--First slide-->
        <div class="col-lg-3 col-md-12 col-sm-12" style="float:left">
          <div class="card mt-4 mb-5">
            <img
              class="card-img-top"
              src="{{item.image_url}}"
              alt="Card image cap"
            />
            <div class="card-body text-center">
              <a href="/item/{{id}}"><h4 class="card-title">{{item.title}}</h4></a>
              <p class="card-text"> {{item.item_description}} </p>
              <span>Posted on ({{format_date created_at}}) </span>
              
              <div class="card-footer text-center">
                <a  href="/your-stuff/edit/{{item.id}}" class="mx-auto btn btn-primary btn-lg btn-block">Edit
                  Item</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    {{/if}}

    
<div class="container-fluid p-0">
  <div class="row">
    <div class="col text-center">
      <section class="card" style="width: 90%;">
        <h2 class="section-title">Create a New Trade</h2>

        <form class="new-item-form">
          <div>
            <label for="item-title">Title</label>
            <input type="text" id="item-title" name="item-title" />
          </div>

          <div>
            <label for="item-description">Description</label>
            <textarea
              class="form-control"
              name="description"
              placeholder="Enter a description..."
              id="description"
            ></textarea>
          </div>
          <div>
            <input
              type="file"
              accept="image/*"
              name="image"
              id="file"
              onchange="loadFile(event)"
              style="display: none;"
            />

            <label
              class="button btn-primary"
              for="file"
              style="cursor: pointer;"
            >Upload Image</label>
            <div><img id="output" width="200" /></div>
          </div>
          <button type="submit" class="button btn-primary">Create</button>

        </form>
      </section>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<script src="/javascript/add-item.js"></script>