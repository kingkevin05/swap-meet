<div class="container-fluid p-0">
  <div class="row">
    <div class="col text-center">
      <section class="card">
        <h2 class="section-title">Create a New Trade</h2>

        <form class="new-item-form">
          <div>
            <label for="item-title">Title</label>
            <input type="text" id="item-title" name="item-title" />
          </div>

          <div>
            <label for="item-description">Description</label>
            <textarea
              class="form-control"
              name="description"
              placeholder="Enter a description..."
              id="description"
            ></textarea>
          </div>
          <div>
            <input
                type="file"
                accept="image/*"
                name="image"
                id="file"
                onchange="loadFile(event)"
                style="display: none;"
              />
            
            <label
                class="button btn-primary"
                for="file"
                style="cursor: pointer;"
              >Upload Image</label>
            <div><img id="output" width="200" /></div>
          </div>
          <button type="submit" class="button btn-primary">Create</button>

        </form>
      </section>
    </div>
  </div>
</div>

{{#if items.length}}
<section>
  <h2>Your Stuff</h2>
  <ol>
    {{#each items as |item|}}
    <li>
      {{> item-info item}}
      <a href="/your-stuff/edit/{{item.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

