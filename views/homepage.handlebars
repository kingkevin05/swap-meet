<section class="section" id="ITEMS">
  <div class="container-fluid text-center">
    <h1 class="section-title text-dark">Browse Items</h1>
  </div>

  <!--Carousel Wrapper-->
  <div id="multi-item-electronics" class="carousel slide" data-ride="carousel">
    <!--Slides-->
    <div class="carousel-inner">
      {{#each items as |item|}}
        <!--First slide-->
        <div class="col-lg-3 col-md-12 col-sm-12 " style="float:left">
          <div class="card mt-4 mb-5">
            <img
              class="card-img-top"
              src="{{item.image_url}}"
              alt="Card image cap"
            />
            <div class="card-body text-center">
              <a href="/item/{{id}}"><h4 class="card-title">{{item.title}}</h4></a>
              <p class="card-text"> {{item.item_description}} </p>
              <span>Posted on ({{format_date created_at}}) </span>
              <h5>by {{user.username}}</h5>
              <div class="card-footer text-center">
                <button class="btn btn-outline-secondary" type="button">Make a
                  offer
                  <i class="fas fa-envelope"></i></button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <!--/.Slides-->
    <!-- Carousel Controls -->
    <a
      class="carousel-control-prev"
      href="#multi-item-electronics"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#multi-item-electronics"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!--/ Carousel Controls -->

  </div>
</section>